{
  "compilerOptions": {
    "target": "ES2020",
    "downlevelIteration": true,
    "module": "commonjs",
    "lib": ["ES2020", "DOM"],
    "outDir": "./dist",
    "strict": false,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "removeComments": true,
    "noImplicitAny": false,
    "strictNullChecks": false,
    "strictFunctionTypes": false,
    "noImplicitThis": false,
    "noImplicitReturns": false,
    "noFallthroughCasesInSwitch": false,
    "noUncheckedIndexedAccess": false,
    "noImplicitOverride": false,
    "allowUnusedLabels": true,
    "allowUnreachableCode": true,
    "exactOptionalPropertyTypes": false,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "types": ["node"],
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@/api/*": ["src/api/*"],
      "@/core/*": ["src/core/*"],
      "@/services/*": ["src/services/*"],
      "@/db/*": ["src/db/*"],
      "@/utils/*": ["src/utils/*"],
      "@rex/shared": ["../shared/types/index"],
      "@rex/shared/*": ["../shared/*"],
      "@rex/engine": ["../engine/index"],
      "@rex/engine/*": ["../engine/*"],
      "@rex/nodes": ["../nodes/index"],
      "@rex/nodes/*": ["../nodes/*"]
    }
  },
  "include": [
    "src/**/*",
    "../shared/**/*.ts",
    "../nodes/**/*.ts",
    "../engine/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "**/node_modules/**",
    "**/dist/**",
    "**/*.test.ts",
    "**/*.spec.ts",
    "**/test/**",
    "**/tests/**"
  ]
}
