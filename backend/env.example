###############################################
# Backend Environment Configuration (copy-ready)
###############################################

# --- Server ---
PORT=3003
NODE_ENV=development
BASE_URL=http://localhost:3003

# Note: AUTH_DISABLED flag is not currently implemented in the codebase
# Authentication is always enabled. Remove this line or set to false.
# AUTH_DISABLED=false

# --- Database ---
DATABASE_URL=postgresql://sahinbegum@localhost:5432/workflow_studio
# Optional fallback used in some scripts
PG_CONNECTION_STRING=postgresql://sahinbegum@localhost:5432/workflow_studio

# --- Redis ---
REDIS_URL=redis://localhost:6379
# Optional details (not required by code paths)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# --- CORS ---
# Include your frontend origins
CORS_ORIGIN=http://localhost:5173,http://127.0.0.1:5173,http://localhost:3000,http://localhost:8080,http://127.0.0.1:8080

# --- Security ---
# Use strong secrets in production
JWT_SECRET=your-super-secret-jwt-key-change-in-production
# Must be 32 characters for encryption routines; do not leave default
ENCRYPTION_KEY=your-32-character-encryption-key-change-in-production
JWT_EXPIRES_IN=7d

# --- Logging ---
LOG_LEVEL=info
LOG_FORMAT=combined

# --- Workflow Execution (optional tuning) ---
WORKFLOW_MAX_RETRIES=3
WORKFLOW_DEFAULT_TIMEOUT=60000
WORKFLOW_MAX_CONCURRENT=10

# --- AI Providers (enable as needed) ---
OPENAI_API_KEY=
ANTHROPIC_API_KEY=
OPENROUTER_API_KEY=
# Google Gemini
GOOGLE_API_KEY=
# Google Cloud Text/Speech
GOOGLE_CLOUD_API_KEY=
# Hugging Face
HUGGINGFACE_API_KEY=
# ElevenLabs / Azure Speech (optional)
ELEVENLABS_API_KEY=
AZURE_SPEECH_KEY=
AZURE_SPEECH_REGION=eastus
# Embeddings
EMBEDDING_MODEL=text-embedding-3-small
EMBEDDING_DIMENSIONS=1536

# --- OAuth (Google by default; add others if you use them) ---
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_REDIRECT_URI=http://localhost:3003/api/auth/oauth/google/callback

# --- Microsoft OAuth (for Microsoft Teams integration) ---
