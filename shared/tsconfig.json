{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "lib": ["ES2022"],
    "outDir": "./dist",
    "rootDir": ".",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "composite": true
  },
  "include": [
    "index.ts",
    "types/**/*.ts",
    "interfaces/**/*.ts",
    "utils/**/*.ts",
    "constants/**/*.ts",
    "schemas/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
